{
	"compilerOptions": {
		"target": "es2020",
		"module": "commonjs",
		"esModuleInterop": true,
		"forceConsistentCasingInFileNames": true,
		"strict": false,
		"skipLibCheck": true,
		"allowJs": true,
		"declaration": true,
		"emitDeclarationOnly": true,
		"outDir": "dist",
		"declarationMap": true,
		"noImplicitAny": false,
		"rootDirs": ["./src", "./scripts", "./test"],
		"types": ["node", "mocha"]
	},
	"exclude": ["dist", "node_modules"],
	"include": ["./test", "./src", "./scripts", "utils", "global.d.ts", "config"],
	"files": ["./hardhat.config.ts"],
	"typeRoots": ["./node_modules/@types", "./src/types", "global.d.ts", "./node_modules/@nomicfoundation/hardhat-ethers/types"]
}
